@using MVCCV.Models.Entity
@model List<TblCertificates>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";} 
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                           
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var item in Model)
                                        {
                                            
                                            <div class="time-label">
                                                <a href="/Certificate/GetCertificate/@item.Id" class="btn btn-success">
                                                    <span class="bg-success">
                                                        @item.Date
                                                    </span>
                                                </a>
                                                
                                            </div>
                                            <!-- /.timeline-label -->
                                            <!-- timeline item -->
                                            <div>
                                                <div class="timeline-item">


                                                    <div class="timeline-body">
                                                        @item.Description
                                                    </div>
                                                    <div class="timeline-footer">
                                                        @*<a href="#" class="btn btn-primary btn-sm">Düzenle</a>
                                                        <a href="#" class="btn btn-danger btn-sm">Sil</a>*@
                                                    </div>
                                                </div>
                                            </div>
                                        }



                                        <!-- END timeline item -->

                                    </div>
                                    <a href="/Certificate/AddCertificate" class="btn btn-info">Yeni Sertifika Girişi</a>
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
       <!-- /.container-fluid -->
    </section>
</body>
</html>